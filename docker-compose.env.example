# Docker Compose Environment Variables
# Copy this file to .env in the project root and customize as needed
# docker-compose.yml will read these values

# Database Configuration
DB_HOST=db
DB_PORT=3306
DB_DATABASE=laravel
DB_USERNAME=laravel
DB_PASSWORD=root
DB_ROOT_PASSWORD=root

# Docker Build Configuration
DOCKER_USER=laravel
DOCKER_UID=1000

# Nginx Configuration
NGINX_PORT=8080

# Reverb Configuration (Websockets)
REVERB_APP_ID=whatsdesk
REVERB_APP_KEY=whatsdesk-key
REVERB_APP_SECRET=whatsdesk-secret
REVERB_HOST=0.0.0.0
REVERB_PORT=8080
REVERB_SCHEME=http

# Security Notes:
# - In production, change all default passwords
# - Use strong, unique passwords for DB_PASSWORD and DB_ROOT_PASSWORD
# - Consider using secrets management for sensitive values
# - Set REVERB_APP_SECRET to a strong random value

