# Docker Compose Environment Variables
# Copy this file to .env in the project root and customize as needed
# docker-compose.yml will read these values

# ============================================
# Database Configuration
# ============================================
DB_HOST=db
DB_PORT=3306
DB_DATABASE=laravel
DB_USERNAME=laravel
DB_PASSWORD=root
DB_ROOT_PASSWORD=root

# ============================================
# Docker Build Configuration
# ============================================
DOCKER_USER=laravel
DOCKER_UID=1000
DOCKER_IMAGE=mobidonia/whatsdesk:latest
COMPOSE_PROJECT_NAME=whatsdesk

# ============================================
# Application Configuration
# ============================================
APP_ENV=local
APP_DEBUG=true
FORCE_HTTPS=false

# ============================================
# Nginx Configuration
# ============================================
NGINX_PORT=8080
NGINX_HTTPS_PORT=8443

# ============================================
# Domain Configuration (for production)
# ============================================
DOMAIN=localhost

# ============================================
# Reverb Configuration (Websockets)
# ============================================
REVERB_APP_ID=whatsdesk
REVERB_APP_KEY=whatsdesk-key
REVERB_APP_SECRET=whatsdesk-secret
REVERB_HOST=0.0.0.0
REVERB_PORT=8080
REVERB_SCHEME=http

# ============================================
# Production Overrides
# ============================================
# For production deployments, set these:
# APP_ENV=production
# APP_DEBUG=false
# FORCE_HTTPS=true
# DOMAIN=yourdomain.com
# REVERB_SCHEME=https
# DB_PASSWORD=<strong-password>
# DB_ROOT_PASSWORD=<strong-password>
# REVERB_APP_SECRET=<strong-random-secret>

# ============================================
# Security Notes:
# ============================================
# - In production, change all default passwords
# - Use strong, unique passwords for DB_PASSWORD and DB_ROOT_PASSWORD
# - Consider using secrets management for sensitive values
# - Set REVERB_APP_SECRET to a strong random value (use: openssl rand -base64 32)
# - Never commit .env file to version control

